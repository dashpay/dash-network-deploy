#!/usr/bin/env bash

set -ea

. ./lib/cli/utils.sh

CMD_USAGE="Generate network configs

Usage: generate <network_name> <masternodes_amd_count> <masternodes_arm_count> [options]

Options:
  -s=<count> --seeds-count=<count> - Number of seed nodes on the network
  -h         --help                - Show help"

for i in "$@"
do
case ${i} in
    -h|--help)
        echo "$CMD_USAGE"
        exit 0
    ;;
esac
done

NETWORK_NAME="$1"
MASTERNODES_AMD_COUNT="$2"
MASTERNODES_ARM_COUNT="$3"

if [[ -z ${NETWORK_NAME} ]]; then
    print_error "Network name is required"
fi

if [ -z ${MASTERNODES_AMD_COUNT} ] || [ -z ${MASTERNODES_ARM_COUNT} ]; then
    print_error "AMD and ARM masternodes count is required (even if zero)"
fi

SEEDS_COUNT="1"

for i in "${@:3}"
do
case ${i} in
    -s=*|--seeds-count=*)
    SEEDS_COUNT="${i#*=}"
    ;;
esac
done

. ./lib/cli/init.sh

node ./bin/generate-configs.js ${NETWORK} ${NETWORK_NAME} ${MASTERNODES_AMD_COUNT} ${MASTERNODES_ARM_COUNT} ${SEEDS_COUNT}
